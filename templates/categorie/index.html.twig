{% extends 'base.html.twig' %}

{% block title %}Catégories
{% endblock %}

{% block body %}
	<h1>Catégories</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Mots clés</th>
				<th>Nb&nbsp;de&nbsp;produits</th>
				<th colspan="2">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for categorie in categories %}
				<tr>
					<td>{{ categorie.id }}</td>
					<td>{{ categorie.titre }}</td>
					<td>{{ categorie.motsCles }}</td>
					<td>{{ categorie.produits|length }}</td>
					<td>
						<a href="{{ path('categorie_show', {'id': categorie.id}) }}">
							<i class="fas fa-eye"></i>
						</a>
					</td>
					<td>
						<a href="{{ path('categorie_edit', {'id': categorie.id}) }}">
							<i class="fas fa-edit"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">Aucun résultat trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('categorie_new') }}" class="btn btn-primary">Nouvelle catégorie</a>
{% endblock %}
