<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Boutique
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body>

		<div class="container-fluid">

			{% include "navbar.html.twig" %}

			{% for type, messages in app.flashes %}
				{% for msg in messages %}
					<div class="alert alert-{{ type }}">
						{{ msg }}
					</div>
				{% endfor %}
			{% endfor %}

			{% block body %}{% endblock %}

		</div>

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>
