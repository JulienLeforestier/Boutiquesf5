{% extends 'base.html.twig' %}

{% block title %}Produit index
{% endblock %}

{% block body %}
	<h1>Produit index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Couleur</th>
				<th>Prix</th>
				<th>Stock</th>
				<th>Photo</th>
				<th colpsan="2">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for produit in produits %}
				<tr>
					<td>{{ produit.id }}</td>
					<td>{{ produit.titre }}</td>
					<td>{{ produit.couleur }}</td>
					<td>{{ produit.prix }}</td>
					<td>{{ produit.stock }}</td>
					<td>{{ produit.photo }}</td>
					<td>
						<a href="{{ path('produit_show', {'id': produit.id}) }}">
							<i class="fas fa-eye"></i>
						</a>
					</td>
					<td>
						<a href="{{ path('produit_edit', {'id': produit.id}) }}">
							<i class="fas fa-edit"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('produit_new') }}">Create new</a>
{% endblock %}
